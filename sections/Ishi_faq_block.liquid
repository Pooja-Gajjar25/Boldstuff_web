<div class="faq-block">
  <div class="page-width">
    <div class="row">
      <div id="comparison" class="col-xl-6 col-lg-12 col-md-12 col-sm-12 col-xs-12 faqbanner">
        <div class="image-container faq-image">
             <a class="media" {% if section.settings.link != blank %}href="{{ section.settings.link }}"{% else %}role="link" aria-disabled="true"{% endif %}
               style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;">
            <figure  class="faq-bg-img {% if section.settings.image %}image lazyload {% endif %}"  
            {% if section.settings.image %} data-bg="{{ section.settings.image | img_url: 'master' }}" {% else %} {{ 'image' | placeholder_svg_tag: 'ishi-placeholder' }} {% endif %}>
             {% if section.settings.text-2 != blank %} <div class="text-2">{{ section.settings.text-2 }}</div> {% endif %}
            <div id="handle" class="handle">
               {% include 'icons' with 'faq-line' %}
            </div>
            <div id="divisor" class="divisor  faq-bg-img {% if section.settings.image-1 %}image lazyload {% else %} {{ 'image' | placeholder_svg_tag: 'ishi-placeholder' }} {% endif %}"  {% if section.settings.image-1 %} data-bg="{{ section.settings.image-1 | img_url: 'master' }}" {% endif %}>
             {% if section.settings.text-1 != blank %} <div class="text">{{ section.settings.text-1 }}</div> {% endif %}
            </div>  
        
            <input type="range" min="0" max="100" value="50" id="slider" class="slider-range">
            </figure>
            </a>
          
        </div>
      </div>
      <div id="faqblock-{{ section.id }}" class="col-xl-6 col-lg-12 col-md-12 col-sm-12 col-xs-12 accordion panel-group">
        {% if section.settings.subtitle != blank or section.settings.maintitle != blank or section.settings.des != blank %}
        <div class="section-header left">
          {% if section.settings.subtitle != blank %}
              <div class="sub-title {{ settings.subtitlefont }}">{{ section.settings.subtitle }}</div>
          {% endif %}
          {% if section.settings.maintitle != blank %}
              <h2 class="title">{{ section.settings.maintitle }}</h2>
          {% endif %}
          {% if section.settings.des != blank %}
              <div class="desc">{{ section.settings.des }}</div>
          {% endif %}
        </div>
        {% endif %}
        <div class="faq-container">
          {% assign i = 1 %}
          {% if section.blocks.size > 0 %}
          {% for block in section.blocks %}
          <div class="panel">
            <div class="ishi-collapse in summary rotate {% if forloop.first == true %} ishi-collapse{% else %}ishi-collapsed {% endif %}" data-href="#faq-container-{{i}}-{{ section.id }}" data-toggle="collapse" aria-expanded="{% if forloop.first == true %}true{% else %}false{% endif %}" data-parent="#faqblock-{{ section.id }}">
              <div class="summary__title">
                <h2 class="h4 accordion__title faq-title">
                {% if block.settings.show_counter %}
                    <span class="category-count">
                      {% if block.settings.image-2 != blank %}
                        <img 
                          class="lazyload"
                          data-src="{{ block.settings.image-2 | img_url: 'master' }}"
                          alt="Gallery Image">
                      {% else %}
                          {{ 'logo' | placeholder_svg_tag: 'ishi-placeholder' }}
                      {% endif %}
                      </span>
                      {% endif %}
                  <div class="faq-title1">{{ block.settings.faq-title }}</div>
                </h2>
                {% include 'icons' with 'caret' %}
              </div>
            </div>
            <div id="faq-container-{{i}}-{{ section.id }}" class="ishi-collapse {% if forloop.first == true %}in {% endif %}" {% if forloop.first == true %}style="display:block"{% endif %}>
              {% if block.settings.faq-subtitle != blank %}
              <div class="accordion__content rte">
                {{ block.settings.faq-subtitle }}
              </div>
              {% endif %}
            </div>
          </div>
          {% assign i = i | plus: 1 %}
          {% endfor %}
          {% endif %}
        </div>
          {% if section.settings.button_label != blank and section.settings.button_link != blank %}
          <a class="btn btn-primary theme-button" href="{{ section.settings.button_link }}">{{ section.settings.button_label | escape }}</a>
          {% endif %}
        </div>
       </div>
   	</div>
  </div>


<style type="text/css">
  #shopify-section-{{ section.id }} {
    margin-bottom: {{ section.settings.section_bottom_spacing_desktop }}px;
  }
  @media (max-width: 767px) {
    #shopify-section-{{ section.id }} {
      margin-bottom: {{ section.settings.section_bottom_spacing_mobile }}px;
    }
  }
</style>



{% schema %}
{
  "name": "Ishi FAQs Block",
  "class": "ishi-faq-section",
  "tag": "section",
  "max_blocks": 30,
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Before",
      "info": "Size: 705px X 440px"
    },
    {
      "type": "text",
      "id": "text-1",
      "label": "Title"
    },    
    {
      "type": "image_picker",
      "id": "image-1",
      "label": "After",
      "info": "Size: 705px X 440px"
    },
    {
      "type": "text",
      "id": "text-2",
      "label": "Title"
    },   
    {
      "type": "text",
      "id": "maintitle",
      "label": "Main Title",
      "default": "Customer FAQ’S"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Sub Title",
      "default": "QUESTION’S"
    },
    {
      "type": "html",
      "id": "des",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
          "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
  },
	{
      "type": "header",
      "content": "Section Bottom Spacing"
    },
    {
      "type": "range",
      "id": "section_bottom_spacing_desktop",
      "label": "Desktop",
      "min": 0,
      "max": 70,
      "step": 10,
      "default": 70
    },
    {
      "type": "range",
      "id": "section_bottom_spacing_mobile",
      "label": "Mobile",
      "min": 0,
      "max": 50,
      "step": 10,
      "default": 30
    }
  ],
  "blocks": [
      { 
        "type": "faq-block",
        "name": "FAQs Block",
        "settings": [
          {
            "type": "checkbox",
            "id": "show_counter",
            "label": "Show FAQ Count",
            "default": true
          },
           {
            "type": "image_picker",
            "id": "image-2",
            "label": "Image",
            "info": "Size: 35px X 35px"
          },
          {
            "type": "text",
            "id": "faq-title",
            "label": "FAQs Question",
            "default": "faq-title"
          },
          {
            "type": "html",
            "id": "faq-subtitle",
            "label": "FAQs Answer",
            "default": "faq-subtitle"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Ishi FAQ Block",
        "blocks": [
          {
            "type": "faq-block"
          },
          {
            "type": "faq-block"
          },
          {
            "type": "faq-block"
          }
        ]
      }
    ]
}
{% endschema %}