{% schema %}
{
  "name": "Adventure Carousel",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Built for Every Adventure"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#0a0a0a"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "range",
      "id": "section_padding_desktop",
      "label": "Desktop Padding",
      "min": 0,
      "max": 100,
      "step": 10,
      "default": 60,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "section_padding_mobile",
      "label": "Mobile Padding",
      "min": 0,
      "max": 80,
      "step": 10,
      "default": 40,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "adventure_card",
      "name": "Adventure Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Adventure Title"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Add to Cart"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Link to Product (Optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Adventure Carousel",
      "blocks": [
        {
          "type": "adventure_card",
          "settings": {
            "title": "Gym & Fitness"
          }
        },
        {
          "type": "adventure_card",
          "settings": {
            "title": "Office Commute"
          }
        },
        {
          "type": "adventure_card",
          "settings": {
            "title": "Travel & Adventure"
          }
        },
        {
          "type": "adventure_card",
          "settings": {
            "title": "Family Outdoor & picnic"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<div
  class="adventure-carousel-section"
  style="
    background-color: {{ section.settings.background_color }};
    {% if section.settings.background_image != blank %}
      background-image: url('{{ section.settings.background_image | image_url: width: 2000 }}');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    {% endif %}
  "
>
  <div class="page-width">
    {% if section.settings.section_title != blank %}
      <h2 class="adventure-carousel__title">{{ section.settings.section_title }}</h2>
    {% endif %}

    <div class="adventure-carousel-wrapper">
      <button class="adventure-nav adventure-nav--prev" aria-label="Previous">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>

      <div class="adventure-carousel-container">
        <div class="adventure-carousel-track">
          {% for block in section.blocks %}
            {% if block.type == 'adventure_card' %}
              <div class="adventure-card" {{ block.shopify_attributes }}>
                <div class="adventure-card__image-wrapper">
                  {% if block.settings.image != blank %}
                    <img
                      src="{{ block.settings.image | image_url: width: 500 }}"
                      alt="{{ block.settings.title }}"
                      loading="lazy"
                      width="500"
                      height="300"
                      class="adventure-card__image"
                    >
                  {% else %}
                    <div class="adventure-card__placeholder">
                      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    </div>
                  {% endif %}
                </div>

                <div class="adventure-card__content">
                  {% if block.settings.title != blank %}
                    <h3 class="adventure-card__title">{{ block.settings.title }}</h3>
                  {% endif %}

                  {% if block.settings.button_text != blank %}
                    {% if block.settings.product != blank %}
                      {% assign product = block.settings.product %}
                      <form method="post" action="{{ routes.cart_add_url }}" class="adventure-card__form">
                        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                        <button type="submit" class="adventure-card__button">
                          {{ block.settings.button_text }}
                        </button>
                      </form>
                    {% elsif block.settings.button_link != blank %}
                      <a href="{{ block.settings.button_link }}" class="adventure-card__button">
                        {{ block.settings.button_text }}
                      </a>
                    {% else %}
                      <button type="button" class="adventure-card__button">
                        {{ block.settings.button_text }}
                      </button>
                    {% endif %}
                  {% endif %}
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <button class="adventure-nav adventure-nav--next" aria-label="Next">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </div>

    <div class="adventure-carousel__dots">
      {% for block in section.blocks %}
        {% if block.type == 'adventure_card' %}
          <button
            class="adventure-dot {% if forloop.first %}active{% endif %}"
            data-index="{{ forloop.index0 }}"
            aria-label="Go to slide {{ forloop.index }}"
          ></button>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .adventure-carousel-section {
    padding: {{ section.settings.section_padding_desktop }}px 0;
    position: relative;
  }

  @media (max-width: 767px) {
    .adventure-carousel-section {
      padding: {{ section.settings.section_padding_mobile }}px 0;
    }
  }

  .adventure-carousel__title {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    font-size: 36px;
    font-weight: 700;
    color: #ffffff;
    text-align: center;
    margin: 0 0 50px 0;
    line-height: 1.2;
  }

  @media (max-width: 767px) {
    .adventure-carousel__title {
      font-size: 28px;
      margin-bottom: 30px;
    }
  }

  .adventure-carousel-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .adventure-carousel-container {
    flex: 1;
    overflow: hidden;
    position: relative;
  }

  .adventure-carousel-track {
    display: flex;
    gap: 20px;
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .adventure-card {
    width: calc(25% - 15px);
    flex: 0 0 calc(25% - 15px);
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    background: #1a1a1a;
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
    display: flex;
    flex-direction: column;
    height: auto;
  }

  .adventure-card__content {
    padding: 2.5rem 1.5rem 1.5rem 1.5rem;
    background: #252525;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  @media (max-width: 1200px) {
    .adventure-card {
      width: calc(33.333% - 14px);
      flex: 0 0 calc(33.333% - 14px);
    }
  }

  @media (max-width: 768px) {
    .adventure-card {
      min-width: calc(50% - 10px);
    }
  }

  @media (max-width: 480px) {
    .adventure-card {
      min-width: 100%;
    }
  }

  .adventure-card__image-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 85%;
    overflow: hidden;
    background: #2a2a2a;
  }

  .adventure-card__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .adventure-card__placeholder {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .adventure-card__overlay {
    display: none;
  }


  .adventure-card__title {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    font-size: 22px;
    font-weight: 600;
    color: #ffffff;
    margin: 0 0 1.5rem 0;
    line-height: 1.2;
    text-align: left;
    height: 54px; /* Fixed height for 2 lines: 22px * 1.2 * 2 lines approx */
    display: flex;
    align-items: flex-start; /* Align text to top */
    overflow: hidden;
  }

  @media (max-width: 767px) {
    .adventure-card__title {
      font-size: 18px;
      height: 44px; /* Adjust for mobile font size */
    }
  }

  .adventure-card__button,
  .adventure-card__form button {
    display: block;
    width: 100%;
    padding: 1rem;
    background: #e66432;
    color: #ffffff;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    font-size: 16px;
    font-weight: 600;
    text-align: center;
    text-decoration: none;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: auto; /* Push button to bottom */
  }

  .adventure-card__button:hover,
  .adventure-card__form button:hover {
    background: #e55a28;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(255, 107, 53, 0.4);
  }

  @media (max-width: 767px) {
    .adventure-card__button,
    .adventure-card__form button {
      padding: 10px 20px;
      font-size: 14px;
    }
  }

  .adventure-card__form {
    margin: 0;
  }

  /* Navigation Arrows */
  .adventure-nav {
    width: 24px;
    height: 36px;
    background: none;
    border: none;
    color: #ffffff;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    flex-shrink: 0;
    padding: 0;
  }

  .adventure-nav svg {
    width: 100%;
    height: 100%;
  }

  .adventure-nav:hover {
    color: #ff6b35;
    transform: scale(1.1);
  }

  .adventure-nav:disabled {
    opacity: 0.1;
    cursor: not-allowed;
  }

  /* Dots */
  .adventure-carousel__dots {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-top: 30px;
  }

  .adventure-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.2);
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;
  }

  .adventure-dot.active {
    background: #ffffff;
    transform: scale(1.2);
  }

  .adventure-dot:hover:not(.active) {
    background: rgba(255, 255, 255, 0.4);
  }
</style>

<script>
  (function () {
    const track = document.querySelector('.adventure-carousel-track');
    const cards = document.querySelectorAll('.adventure-card');
    const prevBtn = document.querySelector('.adventure-nav--prev');
    const nextBtn = document.querySelector('.adventure-nav--next');
    const dots = document.querySelectorAll('.adventure-dot');

    if (!track || cards.length === 0) return;

    let currentIndex = 0;
    let cardsPerView = 4;

    function updateCardsPerView() {
      const width = window.innerWidth;
      if (width <= 480) {
        cardsPerView = 1;
      } else if (width <= 768) {
        cardsPerView = 2;
      } else if (width <= 1200) {
        cardsPerView = 3;
      } else {
        cardsPerView = 4;
      }
    }

    function updateCarousel() {
      const cardWidth = cards[0].offsetWidth;
      const gap = 20;
      const offset = currentIndex * (cardWidth + gap);
      track.style.transform = `translateX(-${offset}px)`;

      // Update dots
      dots.forEach((dot, index) => {
        dot.classList.toggle('active', index === currentIndex);
      });

      // Update button states
      prevBtn.disabled = currentIndex === 0;
      nextBtn.disabled = currentIndex >= cards.length - cardsPerView;
    }

    function goToSlide(index) {
      const maxIndex = Math.max(0, cards.length - cardsPerView);
      currentIndex = Math.max(0, Math.min(index, maxIndex));
      updateCarousel();
    }

    prevBtn.addEventListener('click', () => {
      goToSlide(currentIndex - 1);
    });

    nextBtn.addEventListener('click', () => {
      goToSlide(currentIndex + 1);
    });

    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        goToSlide(index);
      });
    });

    window.addEventListener('resize', () => {
      updateCardsPerView();
      goToSlide(currentIndex);
    });

    // Initialize
    updateCardsPerView();
    updateCarousel();
  })();
</script>
