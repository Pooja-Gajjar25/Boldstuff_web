
  <div class="ishiparallaxbanner {% if section.settings.parallaximage %}parallax-image lazyload {% elsif section.settings.parallaxcolor %}parallax-color{% endif %} {% if section.settings.fixed %}fixed{% endif %}"
       {% if section.settings.parallaximage %} data-bg="{{ section.settings.parallaximage | img_url: 'master' }}" {% endif %}>
    <div class="page-width">
      <div class="row">
          <div class="parallax-list col-lg-6 col-md-12 col-sm-12 parallax-text-{{section.settings.parallax_text_position}}">
            {% for block in section.blocks %} 
            <div class="prallax-category">
              <div class="category-img-outer">
                <div class="category-img lazyload">
                  {% if block.settings.category-image != blank %}
                   <img class="lazyload" 
                     data-src="{{ block.settings.category-image | img_url: 'master' }}"
                     alt="Category Image">
                  {% endif %}
                </div>
              </div>
              <div class="category-text">
              {% if block.settings.category-title != blank %}
              <div class="category-title">{{ block.settings.category-title | escape }}</div>
              {% endif %}
              {% if block.settings.category-desc != blank %}
              <div class="category-desc">{{ block.settings.category-desc | escape }}
                {% if block.settings.category-btn1 != blank %}
                  <a href="{% if block.settings.btn_link1 != blank %}{{ block.settings.btn_link1 }}{% else %}/{% endif %}">
                    {{ block.settings.category-btn1 }}
                  </a>
                {% endif %}
                </div>
              {% endif %}
            </div> 
            </div>
            {% endfor %}
            <div class="category-btn">
                {% if section.settings.category-btn != blank %}
                  <a {% if section.settings.btn_link != blank %}href="{{ section.settings.btn_link }}"{% else %}role="link" aria-disabled="true"{% endif %}
                     class="btn">
                    {{ section.settings.category-btn }}
                  </a>
                {% endif %}
              </div>
          </div>
      </div>
    </div>
  </div>



<style type="text/css">
  
  #shopify-section-{{ section.id }}{
    margin-bottom: {{ section.settings.section_bottom_spacing_desktop }}px;
  }
 #shopify-section-{{ section.id }} .parallax-color{
  	background-color: {{ section.settings.parallaxcolor }};
  }
  #shopify-section-{{ section.id }} .ishiparallaxbanner{
  	padding: {{ section.settings.parallaxpadding }}px 0;
  }
  #shopify-section-{{ section.id }} .parallax-text-right{
    float: right;
    text-align: left;
  }
 #shopify-section-{{ section.id }} .parallax-text-left{
    float: left;
    text-align: left;
  }
  #shopify-section-{{ section.id }} .parallax-text-center{
    margin: 0 auto;
    float: none;
    text-align: center;
    display:inline-block;
  }
   #shopify-section-{{ section.id }} .parallax-list{
    text-align:{{ section.settings.parallaxtextalignment }};
   }
  #shopify-section-{{ section.id }} .parallax-list .category-title{
     color:{{ section.settings.parallaxtextcolor1 }};
  }
  #shopify-section-{{ section.id }} .parallax-list .category-desc,
  #shopify-section-{{ section.id }} .ishiparallaxbanner .parallax-list .prallax-category .category-text .category-desc a{
     color:{{ section.settings.parallaxtextcolor2 }};
  }
  #shopify-section-{{ section.id }} .ishiparallaxbanner .parallax-list .prallax-category .category-text .category-desc a:after{
    background-color:{{ section.settings.parallaxtextcolor2 }};
  }
   @media (max-width: 991px) {
    #shopify-section-{{ section.id }} .ishiparallaxbanner{
     padding: {{ section.settings.parallaxpadding | divided_by: 2 }}px 0;
    }
  }
  @media (max-width: 767px) {
    #shopify-section-{{ section.id }}{
      margin-bottom: {{ section.settings.section_bottom_spacing_mobile }}px;
    }
  }
</style>


{% schema %}
  {
    "name": "Parallax With Category",
    "max_blocks": 3,
    "class": "parallax-with-category",
    "settings": [
      {
        "type": "image_picker",
        "id": "parallaximage",
        "label": "Background Image",
        "info": "Size: 1920px X 850px"
      },
      {
        "type": "color",
        "id": "parallaxcolor",
        "label": "Background Color",
        "default": "#E1DCD9"
      },
      {
        "type": "color",
        "id": "parallaxtextcolor1",
        "label": "Text Color 1",
        "default": "#151515"
      },
      {
        "type": "color",
        "id": "parallaxtextcolor2",
        "label": "Text Color 2",
        "default": "#666666"
      },
      {
        "type": "range",
        "id": "parallaxpadding",
        "min": 0,
        "max": 200,
        "step": 20,
        "label": "Internal Box Space/Padding",
        "default": 160
      },
      {
        "type": "checkbox",
        "id": "fixed",
        "label": "Background Attachment Fixed ?",
        "default": true
      },
      {
        "type": "header",
        "content": "Section Settings"
      },
	     {
        "type": "select",
        "id": "parallax_text_position",
        "label": "Text Position",
        "default": "left",
        "options": [
          { "value": "left", "label": "Left"},
		  { "value": "center", "label": "Center"},
          { "value": "right", "label": "Right"}
        ]
      },
      {
        "type": "select",
        "id": "parallaxtextalignment",
        "label": "Text Alignment",
        "default": "center",
        "options": [
          { "value": "left", "label": "Left"},
          { "value": "center", "label": "Center"},
          { "value": "right", "label": "Right"}
        ]
      },
      {
        "type": "text",
        "id": "category-btn",
        "label": "Button Label",
        "default": "SHOP NOW"
      },
        {
        "type": "url",
        "id": "btn_link",
        "label": "Button Link"
      }, 
      {
        "type": "header",
        "content": "Section Bottom Spacing"
      },
      {
        "type": "range",
        "id": "section_bottom_spacing_desktop",
        "label": "Desktop",
        "min": 0,
        "max": 70,
        "step": 10,
        "default": 70
      },
      {
        "type": "range",
        "id": "section_bottom_spacing_mobile",
        "label": "Mobile",
        "min": 0,
        "max": 50,
        "step": 10,
        "default": 30
      }
    ],
	"blocks": [
      { 
        "type": "image",
        "name": "Category",
        "settings": [
          {
            "type": "image_picker",
            "id": "category-image",
            "label": "Image",
            "info": "Size: 45px X 45px"
          },
          {
            "type": "text",
            "id": "category-title",
            "label": "Heading",
            "default": "Category Title"
          },
          {
            "type": "text",
            "id": "category-desc",
            "label": "Category Description",
            "default": "It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum..."
          },
		  {
            "type": "text",
            "id": "category-btn1",
            "label": "Button Label",
            "default": "Read More"
          },
            {
            "type": "url",
            "id": "btn_link1",
            "label": "Button Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Parallax With Category",
        "category": "Ishi Parallax Block"
      }
    ]
  }
{% endschema %}
