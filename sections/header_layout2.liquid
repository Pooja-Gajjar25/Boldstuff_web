{% comment %}
  Boldstuff Integrated Header (Replacing Header Layout 2)
  Designed to match BOLDSTUFF brand aesthetics.
{% endcomment %}

{% style %}
  :root {
    --header-bg-color: #000000;
    --header-accent-color: {{ section.settings.accent_color | default: '#ff5722' }};
    --header-text-color: #ffffff;
    --header-border-color: #333333;
  }

  #header-layout2 {
    background-color: #000 !important;
  }

  .boldstuff-header {
    width: 100%;
    font-family: 'Inter', sans-serif;
    z-index: 1000;
    background-color: #000;
    margin: 0;
    padding: 0;
  }

  /* Announcement Bar */
  .header-announcement-bar {
    background-color: #111;
    color: #fff;
    padding: 10px 0;
    font-size: 13px;
    font-weight: 500;
  }

  .header-announcement-bar .container {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 40px;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 15px;
    flex-wrap: wrap;
  }

  .announcement-item {
    display: flex;
    align-items: center;
    gap: 10px;
    white-space: nowrap;
  }

  .announcement-icon {
    width: 20px;
    height: 20px;
    object-fit: contain;
  }

  /* Main Header */
  .header-main-bar {
    background: rgba(0, 0, 0, 0.8);
    {% if section.settings.bg_image != blank %}
      background-image: url('{{ section.settings.bg_image | image_url: width: 2000 }}');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    {% endif %}
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    padding: 20px 0;
    margin: 0;
    color: var(--header-text-color);
    position: relative;
    border: none;
  }

  .header-main-bar .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1300px;
    margin: 0 auto;
    padding: 0 15px;
  }

  /* Logo */
  .header-logo .logo-text {
    font-size: 28px;
    font-weight: 900;
    text-transform: uppercase;
    color: #ffffff;
    text-decoration: none;
    letter-spacing: 0.5px;
    display: flex;
    align-items: center;
    line-height: 1;
  }

  .header-logo .logo-text span {
    color: var(--header-accent-color);
  }

  .header-logo img {
    max-height: 45px;
    display: block;
    width: auto;
  }

  /* Navigation */
  .header-nav {
    display: flex;
    align-items: center;
    margin: 0 30px;
  }

  .header-nav-list {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    align-items: center;
  }

  .header-nav-item {
    display: flex;
    align-items: center;
  }

  .header-nav-link {
    color: var(--header-text-color);
    text-decoration: none;
    font-size: 14px;
    font-weight: 700;
    padding: 5px 15px;
    position: relative;
    transition: color 0.3s;
    letter-spacing: 0.5px;
  }

  .header-nav-link.active::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 15px;
    right: 15px;
    height: 3px;
    background-color: var(--header-accent-color);
  }

  .nav-separator {
    color: #555;
    font-size: 16px;
    font-weight: 300;
    opacity: 0.6;
  }

  /* Actions */
  .header-actions {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  .search-pill-wrapper {
    display: flex;
    align-items: center;
    border: 1px solid #444;
    border-radius: 6px;
    padding: 6px 12px;
    background: rgba(255, 255, 255, 0.05);
    transition: border-color 0.3s;
  }

  .search-pill-wrapper:focus-within {
    border-color: var(--header-accent-color);
  }

  .search-pill-wrapper input {
    background: transparent;
    border: none;
    color: #fff;
    font-size: 13px;
    outline: none;
    width: 140px;
  }

  .search-pill-wrapper i {
    font-size: 14px;
    color: #fff;
    margin-right: 8px;
  }

  .action-icon {
    font-size: 20px;
    color: var(--header-text-color);
    text-decoration: none;
    position: relative;
    transition: color 0.3s;
    display: flex;
    align-items: center;
  }

  .action-icon:hover {
    color: var(--header-accent-color);
  }

  .cart-count-badge {
    position: absolute;
    top: -10px;
    right: -12px;
    background-color: var(--header-accent-color);
    color: white;
    font-size: 11px;
    min-width: 20px;
    height: 20px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 900;
    border: none;
  }

  /* Mobile Responsive */
  .mobile-menu-trigger {
    display: none;
    cursor: pointer;
    font-size: 24px;
    color: #fff;
  }

  @media (max-width: 1199px) {
    .header-nav { margin: 0 10px; }
    .search-pill-wrapper input { width: 100px; }
  }

  @media (max-width: 991px) {
    .header-top-bar { display: none; }
    .header-nav { display: none; }
    .search-pill-wrapper { display: none; }
    .mobile-menu-trigger { display: block; }
    .header-main-bar { padding: 15px 0; }
  }
{% endstyle %}

<div class="boldstuff-header" id="section-{{ section.id }}">
  <!-- Announcement Bar -->
  {% if section.blocks.size > 0 %}
    <div class="header-announcement-bar">
      <div class="container">
        {% for block in section.blocks %}
          {% if block.type == 'announcement' %}
            <div class="announcement-item" {{ block.shopify_attributes }}>
              {% if block.settings.icon != blank %}
                <img
                  src="{{ block.settings.icon | image_url: width: 40 }}"
                  alt=""
                  class="announcement-icon"
                  loading="lazy"
                  width="20"
                  height="20"
                >
              {% endif %}
              <span>{{ block.settings.text }}</span>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  {% endif %}

  <!-- Main Header -->
  <div class="header-main-bar">
    <div class="container">
      <!-- Left side: Mobile Toggle & Logo -->
      <div style="display: flex; align-items: center; gap: 20px;">
        <div class="mobile-menu-trigger hidden-lg-up">
          <i class="fa fa-bars"></i>
        </div>
        <div class="header-logo">
          <a href="{{ routes.root_url }}" class="logo-text">
            {% if section.settings.logo != blank %}
              <img
                src="{{ section.settings.logo | image_url: width: 300 }}"
                alt="{{ shop.name }}"
                width="{{ section.settings.logo.width }}"
                height="{{ section.settings.logo.height }}"
                loading="lazy"
              >
            {% else %}
              BOLD<span>STUFF</span>
            {% endif %}
          </a>
        </div>
      </div>

      <!-- Center: Navigation -->
      <nav class="header-nav hidden-md-down">
        <ul class="header-nav-list">
          <span class="nav-separator">|</span>
          {% for link in section.settings.menu.links %}
            <li class="header-nav-item">
              <a href="{{ link.url }}" class="header-nav-link {% if link.active %}active{% endif %}">
                {{ link.title }}
              </a>
              <span class="nav-separator">|</span>
            </li>
          {% endfor %}
        </ul>
      </nav>

      <!-- Right: Actions -->
      <div class="header-actions">
        <!-- Rounded Search Pill -->
        <div class="search-pill-wrapper hidden-sm-down">
          <i class="fa fa-search"></i>
          <input type="text" placeholder="Search" name="q">
        </div>

        <!-- Search Icon (visible on mobile or small screens) -->
        <a href="{{ routes.search_url }}" class="action-icon hidden-lg-up">
          <i class="fa fa-search"></i>
        </a>

        <!-- Cart Icon -->
        <a href="{{ routes.cart_url }}" class="action-icon">
          <i class="fa fa-shopping-cart"></i>
          <span class="cart-count-badge">{{ cart.item_count }}</span>
        </a>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Boldstuff Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Header Background Image"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Navigation Menu",
      "default": "main-menu"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent Color",
      "default": "#ff5722"
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon (Image/SVG)"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Announcement text"
        }
      ]
    },
    {
      "type": "nav_header",
      "name": "Legacy Support",
      "settings": [
        {
          "type": "text",
          "id": "category-title",
          "label": "Offer Text"
        }
      ]
    }
  ]
}
{% endschema %}
