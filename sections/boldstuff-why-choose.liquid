<div class="boldstuff-why-choose section-{{ section.id }}-padding" id="boldstuff-why-choose-{{ section.id }}">
  <div class="boldstuff-section-divider"></div>
  {% if section.settings.bg_image != blank %}
    <div
      class="boldstuff-why-choose__bg-overlay"
      style="background-color: {{ section.settings.overlay_color }}; opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"
    ></div>
  {% endif %}
  <div class="page-width">
    <div class="boldstuff-why-choose__grid">
      <div class="boldstuff-why-choose__content">
        {% if section.settings.title != blank %}
          <h2 class="boldstuff-why-choose__title">
            {{ section.settings.title | replace: '[', '<span class="highlight">' | replace: ']', '</span>' }}
          </h2>
        {% endif %}

        <ul class="boldstuff-why-choose__list">
          {% for block in section.blocks %}
            {% if block.type == 'feature' %}
              <li class="boldstuff-why-choose__item" {{ block.shopify_attributes }}>
                <span class="boldstuff-why-choose__icon">
                  {% if section.settings.feature_icon != blank %}
                    <img
                      src="{{ section.settings.feature_icon | image_url: width: 50 }}"
                      alt=""
                      loading="lazy"
                      width="28"
                      height="28"
                    >
                  {% else %}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="1" />
                      <circle cx="12" cy="12" r="7" stroke="currentColor" stroke-width="1.5" />
                      <path d="M9 12L11 14L15 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                  {% endif %}
                </span>
                <span class="boldstuff-why-choose__text">{{ block.settings.text }}</span>
              </li>
            {% endif %}
          {% endfor %}
        </ul>

        {% if section.settings.trust_info != blank %}
          <div class="boldstuff-why-choose__trust-bar">
            <div class="boldstuff-why-choose__trust-content">
              <span class="boldstuff-why-choose__trust-label">{{ section.settings.trust_label }}</span>
              <div class="boldstuff-why-choose__stars">
                {% if section.settings.stars_image != blank %}
                  <img
                    src="{{ section.settings.stars_image | image_url: width: 300 }}"
                    alt="Ratings"
                    loading="lazy"
                    class="stars-image"
                    width="120"
                    height="24"
                  >
                {% else %}
                  {% for i in (1..5) %}
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="star-icon">
                      <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                    </svg>
                  {% endfor %}
                {% endif %}
              </div>
              <span class="boldstuff-why-choose__trust-info">
                <span class="bold-text">{{ section.settings.trust_platform }}</span>
                <span class="divider">|</span>
                <span class="info-text">{{ section.settings.trust_info }}</span>
              </span>
            </div>
          </div>
        {% endif %}
      </div>

      <div class="boldstuff-why-choose__image-column">
        {% if section.settings.image != blank %}
          <div class="boldstuff-why-choose__image-wrapper">
            <img
              src="{{ section.settings.image | image_url: width: 1000 }}"
              alt="{{ section.settings.image.alt | escape }}"
              loading="lazy"
              width="{{ section.settings.image.width }}"
              height="{{ section.settings.image.height }}"
              class="boldstuff-why-choose__image"
            >
          </div>
        {% else %}
          <div class="boldstuff-why-choose__image-wrapper placeholder">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
  .boldstuff-section-divider {
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, transparent 0%, rgba(255,255,255,0.4) 50%, transparent 100%);
    box-shadow: 0 0 15px rgba(255,255,255,0.2);
    position: absolute;
    top: 0;
    left: 0;
    z-index: 10;
  }

  .boldstuff-section-divider::after {
    content: "";
    position: absolute;
    top: 4px;
    left: 0;
    right: 0;
    height: 1px;
    background: rgba(255,255,255,0.1);
  }

  #boldstuff-why-choose-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    {% if section.settings.bg_image != blank %}
      background-image: url('{{ section.settings.bg_image | image_url: width: 2000 }}');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    {% endif %}
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    color: #ffffff;
    overflow: hidden;
    position: relative;
    z-index: 1;
  }

  .boldstuff-why-choose__bg-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
  }

  @media (max-width: 767px) {
    #boldstuff-why-choose-{{ section.id }} {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }
  }

  .boldstuff-why-choose__grid {
    display: flex;
    align-items: center;
    gap: 60px;
    position: relative;
    z-index: 2;
  }

  @media (max-width: 991px) {
    .boldstuff-why-choose__grid {
      flex-direction: column;
      gap: 40px;
    }
  }

  .boldstuff-why-choose__content {
    flex: 1.2;
  }

  .boldstuff-why-choose__title {
    font-family: var(--font-title-family);
    font-size: 36px;
    font-weight: 700;
    margin-bottom: 30px;
    line-height: 1.2;
    color: #ffffff;
    text-transform: none;
    letter-spacing: -0.01em;
  }

  .boldstuff-why-choose__title .highlight {
    color: #ff6b35;
  }

  @media (max-width: 767px) {
    .boldstuff-why-choose__title {
      font-size: 28px;
      text-align: left;
    }
  }

  .boldstuff-why-choose__list {
    list-style: none;
    padding: 0;
    margin: 0 0 40px 0;
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .boldstuff-why-choose__item {
    display: flex;
    align-items: center;
    gap: 12px;
    font-family: var(--font-body-family);
    font-size: 18px;
    font-weight: 400;
    line-height: 1.4;
  }

  @media (max-width: 767px) {
    .boldstuff-why-choose__item {
      font-size: 16px;
    }
  }

  .boldstuff-why-choose__icon {
    width: 28px;
    height: 28px;
    color: #ff6b35;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .boldstuff-why-choose__icon img {
    width: 100%;
    height: auto;
    display: block;
  }

  .boldstuff-why-choose__trust-bar {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    border-radius: 4px;
    padding: 12px 20px;
    display: inline-block;
    margin-bottom: 30px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
  }

  @media (max-width: 991px) {
    .boldstuff-why-choose__trust-bar {
      display: block;
      width: fit-content;
    }
  }

  .boldstuff-why-choose__trust-content {
    display: flex;
    align-items: center;
    gap: 10px;
    font-family: var(--font-body-family);
    font-size: 15px;
    color: #1a1a1a;
  }

  .boldstuff-why-choose__trust-label {
    font-weight: 700;
    font-size: 18px;
  }

  .boldstuff-why-choose__stars {
    display: flex;
    align-items: center;
    color: #ff6b35;
    gap: 3px;
    margin: 0 5px;
  }

  .star-icon {
    width: 18px;
    height: 18px;
  }

  .stars-image {
    height: 24px;
    width: auto;
    display: block;
  }

  .boldstuff-why-choose__trust-info {
    display: flex;
    align-items: center;
    gap: 5px;
    font-size: 14px;
  }

  .boldstuff-why-choose__trust-info .bold-text {
    font-weight: 700;
    font-size: 16px;
  }

  .boldstuff-why-choose__trust-info .divider {
    color: #999;
    margin: 0 2px;
  }

  .boldstuff-why-choose__trust-info .info-text {
    font-size: 12px;
    color: #333;
    font-weight: 400;
  }

  .boldstuff-why-choose__image-column {
    flex: 1;
    width: 100%;
  }

  .boldstuff-why-choose__image-wrapper {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 15px 30px rgba(0,0,0,0.3);
  }

  .boldstuff-why-choose__image {
    width: 100%;
    height: auto;
    display: block;
  }
</style>

{% schema %}
{
  "name": "Why Choose Boldstuff",
  "tag": "section",
  "class": "boldstuff-why-choose-wrapper",
  "settings": [
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Why Choose [BOLDSTUFF] Bottles?",
      "info": "Use [ ] to highlight text in orange"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Front Image"
    },
    {
      "type": "image_picker",
      "id": "feature_icon",
      "label": "Feature List Icon (.png)"
    },
    {
      "type": "header",
      "content": "Trust Bar Settings"
    },
    {
      "type": "text",
      "id": "trust_label",
      "label": "Trust Label",
      "default": "Rated"
    },
    {
      "type": "image_picker",
      "id": "stars_image",
      "label": "Stars Rating Image"
    },
    {
      "type": "text",
      "id": "trust_platform",
      "label": "Trust Platform",
      "default": "on Amazon"
    },
    {
      "type": "text",
      "id": "trust_info",
      "label": "Trust Info",
      "default": "rated by over 10,000 happy customers"
    },
    {
      "type": "header",
      "content": "Section Styling"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Fallback Background Color",
      "default": "#111111"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Background Overlay Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Background Overlay Opacity",
      "default": 70
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "Padding Top",
      "default": 100
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 100
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding Top Mobile",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding Bottom Mobile",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Feature Text",
          "default": "Feature description"
        }
      ],
      "limit": 6
    }
  ],
  "presets": [
    {
      "name": "Why Choose Boldstuff",
      "blocks": [
        {
          "type": "feature",
          "settings": { "text": "Built for performance in every season" }
        },
        {
          "type": "feature",
          "settings": { "text": "Thermosteel insulation for hours" }
        },
        {
          "type": "feature",
          "settings": { "text": "Travel-friendly & leakproof" }
        },
        {
          "type": "feature",
          "settings": { "text": "Durable & easy to clean" }
        }
      ]
    }
  ]
}
{% endschema %}
