<div class="search-title clearfix" data-href="#search-container-full" data-toggle="popover" aria-expanded="false">
  <span class="search-toggle hidden-lg-down">{% render 'icons' with 'magnifying-desktop' %}</span>
  <span class="search-toggle hidden-lg-up">{% render 'icons' with 'magnifying-mobile' %}</span>
</div>

<div id="search-container-full" class="search-info toggle-dropdown">
  <form action="/search" method="get" class="search-header search search--focus" role="search">
    <input type="hidden" name="type" value="product">
    <input class="search-header__input search__input"
      name="q"
      placeholder="{{ 'templates.search.placeholder' | t }}"
      aria-label="{{ 'templates.search.placeholder' | t }}">
      
    <!-- Suggestion tags container -->
    <div class="suggestion-tags">
      <ul>
        {%- for i in (1..5) -%}
          {%- capture cap_quick_search -%}quick_search_{{ i }}{%- endcapture -%}
          {%- assign quick_search = settings[cap_quick_search] -%}
           {%- if quick_search != blank -%}
        <li><a href="{{ routes.search_url }}?q={{ quick_search }}&amp;type=product">{% render 'icons' with 'magnifying-desktop' %} <span>{{ quick_search | escape }}</span> </a></li>
        {% endif %}
        {%- endfor -%}
      </ul>
    </div>

    <button class="search-header__submit search__submit btn--link" type="submit">
      <i class="fa fa-search" aria-hidden="true"></i>
      <span class="icon__fallback-text hidden">{{ 'templates.search.button-text' | t }}</span>
    </button>
  </form>
</div>